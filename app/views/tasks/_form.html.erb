<div class="form">
  <%= form_with(model: @task,local: true) do |f| %>
    <% if @task.errors.any? %>
      <p><%= pluralize(@task.errors.count, 'error') %></p>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit '登録', id: 'create_button' %>
    <%= link_to '戻る', tasks_path %>
  <% end %>
</div>