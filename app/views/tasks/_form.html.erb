<div class="form">
  <%= form_with(model: @task,local: true) do |f| %>
    <% if @task.errors.any? %>
      <p><%= pluralize(@task.errors.count, 'error') %></p>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>

    <%= f.label :end_date %>
    <%= f.date_select(:end_date, use_month_numbers: true,
                               start_year: Time.now.year,
                               end_year: (Time.now.year + 100)
                               )%>
    <%= f.label :status %>
    <%=  f.select :status, [["未着手", "未着手"],["着手中", "着手中"],["完了", "完了"]] %>
    <%=  f.select :priority, [["低", 0],["中", 1],["高", 2]], name: :sort_option %>
    <%= f.submit '登録', id: 'create_button' %>
    <%= link_to '戻る', tasks_path %>
  <% end %>
</div>