<!DOCTYPE html>
<html>
  <head>
    <title>TaskApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <head class="navbar navbar-expand-md navbar-light bg-light">

      <div class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <% if logged_in? %>
              <%= link_to 'Profill', user_path(current_user.id),class: '' %>
              <%= link_to 'Logout', session_path(current_user.id),method: :delete ,data: {confirmation: 'ログアウトしてもよろしいですか？'}%>
            <% else %>
              <div class="login">
                <%= form_with(scope: :session,url: sessions_path,local: true) do |f| %>
                  <%= f.label :email %>
                  <%= f.email_field :email, class: 'form-inline' %>
                  <%= f.label :password %>
                  <%= f.password_field :password, class: 'form-inline' %>
                  <%= f.submit 'ログイン', class: "btn btn-primary" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% flash.each do |key,value| %>
      <%= content_tag(:div,value,class: key) %>
    <% end %>
  </head>
  <div class="wrapper">
    <body>
      <%= yield %>
    </body>
  </div>
</html>
